<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- Front Tires Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <!-- Front Left Tire -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/front_left_tire_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bar"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/front_left_tire_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- 째C"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/front_left_tire_square"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Front Right Tire -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/front_right_tire_square"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/front_right_tire_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bar"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/front_right_tire_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- 째C"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Rear Tires Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Rear Left Tire -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/rear_left_tire_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bar"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/rear_left_tire_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- 째C"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/rear_left_tire_square"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Rear Right Tire -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/rear_right_tire_square"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/rear_right_tire_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bar"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/rear_right_tire_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- 째C"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
